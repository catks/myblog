<div id="sidebar">
  <ul>
    <li>
      <div id="search" >
        <%= search_form_for @q do |f| %>

          <%= f.search_field :title_or_body_contains %>

          <%= f.submit "Procurar" %>

      <% end %>
      </div>
      <div style="clear: both;">&nbsp;</div>
    </li>
    <li>
      <h2>Get The Framework</h2>
      <p>You can download Ruby and/or Ruby on Rails for free right now
                                                    <br />
                                                    <a style="color:#D93544;" href="http://rubyonrails.org/download" target="blank">GET IT NOW</a>
                                                </p>
    </li>
    <li>
      <h2>Categorias</h2>
      <ul>
        <% all_categories.each do |c| %>
          <li><%= link_to c.name, c %></li>
        <% end %>

      </ul>
    </li>
    <li>
      <h2>Blogroll</h2>
      <ul>
        <% all_posts.each do |p| %>
          <li><%= link_to p.title, p %></li>
        <% end %>
      </ul>
    </li>

  </ul>
</div>
<!-- end #sidebar -->
